<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/name"
        style="@style/AttributionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/copyrightNotices"
        style="@style/AttributionCopyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/licensesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:dividerDrawableHorizontal="@drawable/license_divider_horizontal"
        app:dividerDrawableVertical="@drawable/license_divider_vertical"
        app:flexWrap="wrap"
        app:showDividerHorizontal="middle"
        app:showDividerVertical="middle" />

</LinearLayout>
