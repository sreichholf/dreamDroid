<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CardListView"></style>

    <style name="CardListView.Light">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:background">?attr/simpleHeaderBackground</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="SimpleHeader" parent="@android:style/TextAppearance.Small">

        <!-- <item name="android:textAllCaps">true</item> -->
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#888</item>
        <item name="android:background">@drawable/simple_heading_line</item>
    </style>

    <style name="ButtonPanel"></style>

    <style name="ButtonBar" parent="@android:style/ButtonBar"></style>

    <style name="ButtonBarButton"></style>

    <style name="RemoteButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="RemoteButton.Medium" parent="RemoteButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="NavigationDrawer">
        <item name="android:background">?android:windowBackground</item>
    </style>

    <style name="MediumHeader" parent="SimpleHeader">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectableItem">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <style name="Theme.DreamDroid" parent="Theme.AppCompat">
        <item name="navListPreferredItemHeight">@dimen/navListPreferredItemHeight</item>
        <item name="simpleHeaderBackground">#333</item>
        <item name="cardBackground">@android:color/transparent</item>
        <item name="cardListView">@style/CardListView</item>
    </style>

    <style name="Theme.DreamDroid.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="navListPreferredItemHeight">@dimen/navListPreferredItemHeight</item>
        <item name="simpleHeaderBackground">#DDD</item>
        <item name="cardBackground">@drawable/card_list_item_selector</item>
        <item name="cardListView">@style/CardListView.Light</item>
    </style>

    <style name="Theme.DreamDroid.Dialog" parent="Theme.DreamDroid.Light" />

</resources>